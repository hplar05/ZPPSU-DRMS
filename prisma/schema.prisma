generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  email        String        @unique
  username     String        @unique
  password     String
  firstname    String
  middlename   String?
  lastname     String
  mobileNumber String?
  requestForm  RequestForm[]
  role         Role          @default(STUDENT)
  createdAt    DateTime      @default(now())
  updateUt     DateTime      @updatedAt
}

enum Role {
  STUDENT
  ADMIN
}

model RequestForm {
  id            String   @id @default(cuid())
  nameOfStudent String
  course        String
  subjectname   String
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  action        Action   @default(PENDING)
  createdAt     DateTime @default(now())
  updateUt      DateTime @updatedAt
}

enum Action {
  APPROVE
  DISAPPROVE
  PENDING
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  body      String
  createdAt DateTime @default(now())
  updateUt  DateTime @updatedAt
}
